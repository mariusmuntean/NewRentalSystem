<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:DockLayoutPanel width="100%">
		<g:north size="200">
					<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER"
				width="100%" height="auto">
				<g:Cell horizontalAlignment="ALIGN_LEFT">
					<g:Image url="images/Tum_logo.gif" pixelSize="200, 200"
						height="200" width="200"></g:Image>
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_CENTER">
					<g:Label text="TUM Device Rental System" styleName="titleStyle"
						horizontalAlignment="ALIGN_CENTER"></g:Label>
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_RIGHT">
					<g:Image url="images/Tum_logo.gif" pixelSize="100, 100"></g:Image>
				</g:Cell>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:VerticalPanel width="100%" height="auto" horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
				<g:Cell horizontalAlignment="ALIGN_CENTER">
					<g:Label text="To access the system you must be authorized and logged in."/>
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" width="auto">
					<g:HorizontalPanel width="auto" height="auto">
					<g:Cell horizontalAlignment="ALIGN_RIGHT">
						<g:Button text="Login with Facebook" ui:field="btnLoginFacebook"/>
					</g:Cell>
					<g:Cell horizontalAlignment="ALIGN_CENTER">
						<g:Button text="Login with Google" ui:field="btnLoginGoogle"/>
					</g:Cell>
					<g:Button ui:field="btnLoginTwitter">Login with Twitter</g:Button>
				</g:HorizontalPanel>
				</g:Cell>
			</g:VerticalPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 